generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        Int              @id @default(autoincrement())
  name                      String
  email                     String           @unique
  password                  String
  role                      Role             @default(USER)
  isActive                  Boolean          @default(true)
  createdAt                 DateTime         @default(now())
  updatedAt                 DateTime         @updatedAt
  passwordResetToken        String?
  passwordResetTokenVerfied Boolean?
  passwordResetTokenExpire  String?
  passwordChangedAt         String?
  emailVerificationToken    String?          @unique
  emailVerified             Boolean          @default(false)
  comments                  Comment[]
  likes                     Like[]
  posts                     Post[]
  profile                   Profile?
  stories                   Story[]
  followers                 FollowRelation[] @relation(name: "followed")
  following                 FollowRelation[] @relation(name: "follower")
}

model FollowRelation {
  id         Int  @id @default(autoincrement())
  followedId Int
  followerId Int
  followed   User @relation(name: "followed", fields: [followedId], references: [id])
  follower   User @relation(name: "follower", fields: [followerId], references: [id])
}

model Profile {
  id      Int     @id @default(autoincrement())
  userId  Int     @unique
  bio     String
  image   String?
  city    String
  website String?
  user    User    @relation(fields: [userId], references: [id])
}

model Post {
  id            Int       @id @unique @default(autoincrement())
  userId        Int
  title         String
  content       String
  image         String[]  
  likesCount    Int       @default(0)
  commentsCount Int       @default(0)
  postedAt      DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  privacy       privacy   @default(FOLLOWERS)
  comments      Comment[]
  likes         Like[]
  author        User      @relation(fields: [userId], references: [id])
}

model Story {
  id      Int     @id @unique @default(autoincrement())
  userId  Int
  image   String
  privacy privacy @default(FOLLOWERS)
  user    User    @relation(fields: [userId], references: [id])
}

model Like {
  postId Int
  userId Int
  Post   Post @relation(fields: [postId], references: [id])
  User   User @relation(fields: [userId], references: [id])

  @@id([postId, userId])
}

model Comment {
  postId Int
  userId Int
  Post   Post @relation(fields: [postId], references: [id])
  User   User @relation(fields: [userId], references: [id])

  @@id([postId, userId])
}

enum Role {
  USER
  ADMIN
}

enum privacy {
  PUBLIC
  PRIVATE
  FOLLOWERS
}
